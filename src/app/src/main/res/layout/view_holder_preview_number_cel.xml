<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_dimen_small_cell"
        android:layout_height="@dimen/card_dimen_small_cell"
        app:cardElevation="@dimen/card_elevation">

        <View
            android:id="@+id/cel_default_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/number_default_state"
            tools:visibility="visible" />

        <View
            android:id="@+id/cel_selected_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selected_number_state"
            tools:visibility="gone" />

        <View
            android:id="@+id/cel_correct_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/correct_number_state"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/Base.CrazyMath.Text.SmallBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="1" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>