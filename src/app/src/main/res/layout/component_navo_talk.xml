<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.gabrielbmoro.crazymath.presentation.components.NavoImageButtonComponent
        android:id="@+id/navo_icon"
        android:layout_width="@dimen/auxiliary_button_size"
        android:layout_height="@dimen/auxiliary_button_size"
        android:padding="@dimen/button_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.gabrielbmoro.crazymath.presentation.components.ClickableTextView
        android:id="@+id/navo_message"
        style="@style/Dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/auxiliary_button_size_half"
        android:contentDescription="@string/balloon_message_from_navo_mouth"
        app:layout_constraintBottom_toBottomOf="@+id/navo_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navo_icon"
        tools:text="@string/login_disclaimer" />

</androidx.constraintlayout.widget.ConstraintLayout>